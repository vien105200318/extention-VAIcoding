{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "outDir": "dist",      
        "lib": [
            "ES2022",
            "DOM"              
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true, 
        "skipLibCheck": true,    
        "forceConsistentCasingInFileNames": true,
        "declaration": true      
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
